# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Configuration (optional)
MODEL=mistralai/mistral-7b-instruct:free

# SMTP Configuration (Gmail)
SENDER_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# SMTP Server Configuration (optional - defaults to Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Demo Configuration
# For demo purposes, all emails will be sent to this address
DEMO_RECIPIENT_EMAIL=goledc123@gmail.com

# CORS Configuration
# Set to "*" to allow all origins (for development)
# For production, specify exact origins separated by commas: "https://yourdomain.com,https://www.yourdomain.com"
ALLOWED_ORIGINS=*
